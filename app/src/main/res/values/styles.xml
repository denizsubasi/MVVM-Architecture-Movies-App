<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppThemeWithoutToolbar" parent="AppTheme">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextFieldStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/arimo</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextFieldStyle.Bold" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/arimo_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextFieldStyle.PageTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/arimo_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryPageTitleColor</item>
    </style>

    <style name="PrimaryTextField.MovieDetails.Collapsed" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="PrimaryTextField.MovieDetails.Expanded" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyleNewsDetails</item>
    </style>


    <style name="DrawerArrowStyleNewsDetails" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">

        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

</resources>
